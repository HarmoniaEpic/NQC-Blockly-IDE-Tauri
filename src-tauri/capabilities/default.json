{
  "$schema": "../gen/schemas/capabilities.json",
  "identifier": "default",
  "description": "Default permissions for the NQC Blockly IDE",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "shell:allow-execute",
    "dialog:default",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-exists",
    "fs:allow-read-dir",
    "fs:read-all",
    "fs:write-all",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:scope",
    "shell:allow-spawn",
    "shell:allow-execute",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "nqc",
          "cmd": "nqc",
          "args": true
        }
      ]
    }
  ]
}
