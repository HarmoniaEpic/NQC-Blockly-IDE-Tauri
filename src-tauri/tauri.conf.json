{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NQC Blockly IDE",
  "version": "1.0.0",
  "identifier": "com.nqc-blockly.ide",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "NQC Blockly IDE for LEGO RCX",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {}
}
